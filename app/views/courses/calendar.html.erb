

<p id="notice"><%= notice %></p>

<h1>Calendar of Events</h1>

<%= month_calendar events: @courses do |date, courses| %>

  <div style="width:44px">
    <span class="day"><%= date.day %></span>
  </div>



  <% courses.each do |course| %>
    <div>
      <% if course.course_type == "mindfulness course" %>
        <%= link_to course.name, mindfulnesscourses_path + '#' + course.anchor %>
      <% else %>
        <%= link_to course.name, mindful_education_project_path + '#' + course.anchor %>
      <% end %>
    </div>
  <% end %>
<% end %>
