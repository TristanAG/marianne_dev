<h1>Admin Index</h1>

<h2>Mindfulness Courses</h2>

  <% @mindfulness_courses.each do |course| %>
    <div class="course-admin-single">
      <h3><%= course.name %></h3>
      <%= course.start_time.strftime("%I:%M %P") %>
      <br>
      <%= course.course_content %>
      <br>

      <% if course.first_instance %>
      <br>
        <span class="first-instance-notice">=> This course is displayed to clients <=</span>
      <% end %>
      <% if course.include_in_calendar %>
        <br>
        <span class="first-instance-notice">=> This course can be seen on the calendar <=</span>
        <br>
      <% end %>
      <br>

      <%= link_to 'Edit', edit_course_path(course) %> | <%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    <br>
  <% end %>

  <br>


