<h1>Admin Index</h1>

<h2>Mindfulness Courses</h2>

  <% @mindfulness_courses.each do |course| %>
  <div class="course-admin-single">
    <b><%= course.name %></b> | <%= course.start_time.strftime("%A %b %d %I:%M %P") %>
    <% if course.first_instance %>
      <br><span class="first-instance-notice">=> This course is displayed to clients <=</span>
    <% end %>
    <% if course.include_in_calendar %>
      <br><span class="first-instance-notice">=> This course can be seen on the calendar <=</span>
    <% end %>
    <br><%= link_to 'Edit', edit_course_path(course) %> | <%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <br>
  <% end %>

  <br>


